@model LoginWith2faViewModel

@{
    Layout = "_LayoutAccount";
    ViewBag.Title = "Login with 2FA";
}

@section Styles{
    <style>
        .validation-summary-errors {
            color: red
        }
    </style>
}

<div class="card rounded-3 w-md-450px card-background-ct">
    <div class="card-body p-9 p-lg-12">
        <form method="post" action="/LoginWith2fa" class="form w-100">

            @Html.HiddenFor(x => x.ReturnUrl)

            @Html.AntiForgeryToken()

            <div class="text-center mb-7">
                <h2 class="text-dark fw-bolder mb-3">Verification 2FA authentication</h2>
                <div class="text-gray-500 fw-semibold fs-6">
                    Your login is protected with an authenticator app. Enter your authenticator code below.
                </div>
            </div>

            <div class="fv-row mb-8">
                @Html.ValidationSummary()
            </div>

            <div class="fv-row mb-5">
                <label class="form-label">Authenticator Code</label>
                <input type="text" asp-for="TwoFactorCode" class="form-control bg-transparent" required autocomplete="off" placeholder="Enter your authentication code">
                <span asp-validation-for="TwoFactorCode" class="text-danger"></span>
            </div>

            <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
                <div></div>
                <a href="/login" class="link-primary">Sign In ?</a>
            </div>

            <div class="d-grid mb-10">
                <button type="submit" class="btn btn-primary">
                    <span class="indicator-label">Submit</span>
                </button>
            </div>

            <div class="text-gray-500 text-center fw-semibold fs-6">
                Don’t have an account ? <a href="/register" class="link-primary">Sign Up now !</a>
            </div>
        </form>
    </div>
</div>