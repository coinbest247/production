@model RegisterViewModel

@{
    Layout = "_LayoutAccount";
    ViewBag.Title = "Register";
}

@section Styles{

}

@section Scripts{

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <recaptcha-script validation-message-element-id="recaptchaErrorMessage" />

    <script src="~/admin-app/controllers/account/register.js" asp-append-version="true"></script>
    <script>
        var register = new registerController();
        register.initialize();
    </script>
}

<div class="card rounded-3 w-md-450px card-background-ct">
    <div class="card-body p-9 p-lg-12">
        <form method="post" action="#" class="form w-100">

            @Html.AntiForgeryToken()

            <div class="text-center mb-7">
                <h2 class="text-dark fw-bolder mb-3">Sign Up</h2>
                <div class="text-gray-500 fw-semibold fs-6">Enter valid email address and password to register your account</div>
            </div>

            <div class="fv-row mb-5">
                <label class="form-label">Email</label>
                <input type="email" id="txtEmail"
                       class="form-control bg-transparent" autocomplete="off"
                       placeholder="Enter your email address">
            </div>

            <div class="fv-row mb-5">
                <label class="form-label">Password</label>
                <input type="password" id="txtPassword"
                       class="form-control bg-transparent" autocomplete="off"
                       placeholder="Enter your password">
            </div>

            <div class="fv-row mb-5">
                <label class="form-label">Confirm Password</label>
                <input type="password" id="txtConfirmPassword"
                       class="form-control bg-transparent" autocomplete="off"
                       placeholder="Enter your password">
            </div>

            <div class="fv-row mb-8">
                <label class="form-label">Sponsor</label>
                <input type="text" value="@Model.Sponsor" id="txtSponsor"
                       class="form-control bg-transparent" autocomplete="off"
                       placeholder="Enter your sponsor">
            </div>

            <div class="fv-row mb-8 fv-plugins-icon-container">
                <label class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="chkToc" value="true" checked="checked">
                    <span class="form-check-label fw-semibold text-gray-700 fs-base ms-1">
                        I have read and agree to @CommonConstants.PROJECT_NAME’s <a href="#" class="ms-1 link-primary">Terms of Service</a>  and <a href="#" class="ms-1 link-primary">Privacy Policy</a> .

                        
                    </span>
                </label>
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>

            <div class="fv-row mb-8 fv-plugins-icon-container">
                <label class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="chkUpdate" value="true" checked="checked">
                    <span class="form-check-label fw-semibold text-gray-700 fs-base ms-1">
                        I agree to receive marketing updates from @CommonConstants.PROJECT_NAME.

                    </span>
                </label>
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>

            <div class="fv-row mb-8">
                <recaptcha />
                <span class="text-danger" id="recaptchaErrorMessage"></span>
            </div>

            <div class="d-grid mb-10">
                <button type="button" id="btnRegister" class="btn btn-primary">
                    <span class="indicator-label">Submit</span>
                </button>
            </div>

            <div class="text-gray-500 text-center fw-semibold fs-6">
                Already have an account ? <a href="/login" class="link-primary">Sign in now !</a>
            </div>
        </form>
    </div>
</div>

