@{
    Layout = "_LayoutAccount";
    ViewBag.Title = "Resend email confirmation";
}

@section Styles{

}

@section Scripts{
    <script src="~/admin-app/controllers/account/resend-email-confirm.js" asp-append-version="true"></script>

    <script>
        var resendEmailConfirm = new ResendEmailConfirmController();
        resendEmailConfirm.initialize('@ViewBag.EncryptKey');
    </script>
}

<div class="card rounded-3 w-md-550px card-background-ct">
    <div class="card-body p-10 p-lg-20">
        <form method="post" class="form w-100">

            @Html.AntiForgeryToken()

            <div class="text-center mb-7">
                <h2 class="text-dark fw-bolder mb-3">Resend Email</h2>
                <div class="text-gray-500 fw-semibold fs-6">
                    Enter your email address to resend activation email
                </div>
            </div>

            <div class="separator separator-content my-14">
                <a href="/login" class="w-125px text-primary fw-semibold fs-7">
                    Sign in here !
                </a>
            </div>

            <div class="fv-row mb-8">
                @Html.ValidationSummary()
            </div>

            <div class="fv-row mb-8">
                <label class="form-label">Email</label>
                <input type="email" id="txtEmail" class="form-control bg-transparent" placeholder="Enter your email address">
            </div>

            <div class="d-flex flex-stack flex-wrap gap-3 fs-base fw-semibold mb-8">
                <div></div>
                <a href="/forgotpassword" class="link-primary">Forget Password ?</a>
            </div>

            <div class="d-grid mb-10">
                <button type="button" id="btnResendEmailConfirm" class="btn btn-primary">
                    <span class="indicator-label">Submit</span>
                </button>
            </div>

            <div class="text-gray-500 text-center fw-semibold fs-6">
                Don’t have an account ? <a href="/register" class="link-primary">Sign Up now !</a>
            </div>
        </form>
    </div>
</div>

