@using Core.Data.Enums;
@using Core.Utilities.Extensions;
<div class="card card-dashed h-xl-80 flex-row flex-stack flex-wrap p-6">
    <div class="d-flex flex-column">
        <div class="d-flex align-items-center py-2">
            <a href="https://bscscan.com/token/@(CommonConstants.SHIBAContract)" target="_blank">
                <img src="~/images/shiba.png" alt="Wallet @Unit.SHIBAINU.GetDescription()" class="me-4 w-40px" />
            </a>
            <div>
                <div class="fs-6 fw-bold text-gray-800">Wallet Shiba Inu</div>
                <div class="fs-7 fw-bold text-gray-600"><span class="numberFormat4 text-dark fw-bolder @(@Unit.SHIBAINU.GetDescription())Amount">0.0000</span> @Unit.SHIBAINU.GetDescription()</div>
            </div>
        </div>
        <div class="d-flex align-items-center py-2">
            <button class="btn btn-sm btn-light-dark text-gray-800 me-2 btnDeposit"
                    data-tokencode="@Unit.SHIBAINU.GetDescription()"
                    data-mindeposit="@CommonConstants.SHIBAMinDeposit">
                Deposit
            </button>

            <button class="btn btn-sm btn-light-dark text-gray-800 me-2 btnWithdraw btnWithdraw@(Unit.SHIBAINU.GetDescription())"
                    data-tokencode="@Unit.SHIBAINU.GetDescription()"
                    data-unit="@((int)Unit.SHIBAINU)"
                    data-balance="0.0000"
                    data-fee="@CommonConstants.SHIBAFeeWithdraw"
                    data-minwithdraw="@CommonConstants.SHIBAMinWithdraw">
                Withdraw
            </button>

            <a href="/admin/wallettransaction/index" class="btn btn-sm btn-icon btn-light-dark">
                <span class="svg-icon svg-icon-3">
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <rect x="0" y="0" width="24" height="24"></rect>
