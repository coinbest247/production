<td>
    <div class="symbol symbol-50px">
        <img src="~/images/tokenicon.png" alt="" />
    </div>
</td>
<td>
    <a href="#" class="text-dark fw-bold text-hover-primary mb-1 fs-5">@CommonConstants.TOKEN_CODE</a>
    <span class="fw-semibold d-block fs-6 @(CommonConstants.TOKEN_CODE)Amount">0.0000</span>
</td>
<td>
    <span class="fw-semibold d-block fs-6">@(CommonConstants.TOKEN_CODE)</span>

</td>
<td class="text-end">
    <button class="btn btn-sm btn-light-dark text-gray-800 me-2 btnDeposit"
            data-tokencode="@(CommonConstants.TOKEN_CODE)"
            data-mindeposit="@CommonConstants.TokenMinDeposit">
