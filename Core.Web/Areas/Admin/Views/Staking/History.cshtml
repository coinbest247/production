@using Core.Utilities.Constants

@{
    ViewBag.Title = "Staking History";
}

@section Styles{
    <link href="~/admin-app/controllers/staking/history.css" rel="stylesheet" asp-append-version="true" />
}

@section Scripts{
    <script src="~/admin-app/controllers/staking/history.js" asp-append-version="true"></script>
    <script>
        var historyController = new HistoryController();
        historyController.initialize();
    </script>
}

<div class="d-flex flex-column flex-column-fluid">

    @await Html.PartialAsync("_ToolbarPartial")

    <div id="kt_app_content" class="app-content flex-column-fluid pt-6 pt-lg-10">
        <div id="kt_app_content_container" class="app-container container-xxl">
            <div class="row gx-5 gx-xl-10">
                <div class="col-xl-12 mb-5 mb-xl-10">
                    <div class="card">
                        <div class="card-header pt-5">
                            <div class="card-toolbar">
                                <div class="d-flex flex-stack flex-wrap gap-4">
                                    
                                    <div class="d-flex align-items-center fw-bold">
                                        <input type="text" id="txt-search-keyword" class="form-control form-control-white form-control-sm" placeholder="Search">
                                    </div>

                                    <div class="d-flex align-items-center fw-bold">
                                        <button type="button" id="btnSearch" class="btn btn-sm btn-success">
                                            <span class="indicator-label">Search</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                    <thead>
                                        <tr class="fw-bolder text-muted">
                                            
                                            
                                            <th class="min-w-90px">
                                                <span class="d-block">Sponsor</span>
                                                <span class="d-block">Email</span>
                                            </th>
                                            <th class="min-w-90px">
                                                <span class="d-block">Staking Amount</span>
                                                <span class="d-block">Payment Amount</span>
                                            </th>
                                            <th>Time Line</th>
                                            <th>Interest Rate</th>
                                            <th>Receive Times</th>
                                            <th>Receive Latest</th>
                                            <th>Type</th>
                                            <th>Create Date</th>
                                            <th class="min-w-90px">
                                                <span class="d-block">Completed On</span>
                                                <span class="d-block">Cancel On</span>
                                            </th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tbl-content"></tbody>
                                </table>
                            </div>
                            @await Component.InvokeAsync("Paging")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script id="table-template" type="x-tmpl-mustache">
    <tr>

        
        <td>
            <span class="fw-bold text-gray-700 d-block fs-7">{{Sponsor}}</span>
            <span class="fw-bold text-dark d-block fs-7">{{AppUserName}}</span>
        </td>
        <td>
            <span class="fw-bold text-gray-700 d-block fs-7">{{StakingAmount}} PI</span>
            <span class="fw-bold text-dark d-block fs-7">{{PaymentAmount}} {{PaymentUnit}}</span>
        </td>
        <td>
            <span class="text-gray-700 fw-bold text-hover-primary d-block fs-7">360 days</span>
        </td>
        <td>
            <span class="fw-bolder text-dark text-hover-primary d-block fs-7">{{InterestRate}}%</span>
        </td>
        <td>
            <span class="text-dark fw-bold text-hover-primary d-block fs-7">{{ReceiveTimes}}</span>
        </td>
        <td>
            <span class="text-gray-700 fw-bold text-hover-primary d-block fs-7">{{ReceiveLatest}}</span>
        </td>
        <td>
            <span class="text-success fw-bold text-hover-primary d-block fs-7">{{TypeName}}</span>
        </td>
        <td>
            <span class="text-muted fw-bold text-hover-primary d-block fs-7">{{DateCreated}}</span>
        </td>

         <td>
            <span class="fw-bold text-gray-700 d-block fs-7">{{CompletedOn}}</span>
            <span class="fw-bold text-dark d-block fs-7">{{CancelOn}}</span>
        </td>
        <td>
            <span class="fw-bolder text-dark text-hover-primary d-block fs-7">{{{Function}}}</span>
        </td>
    </tr>
</script>